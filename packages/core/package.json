    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@conduitplatform/testing-tools": "^1.0.0",
    "@types/convict": "^6.1.6",
    "@types/express": "~4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "22.10.2",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
