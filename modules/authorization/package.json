{
  "name": "@conduitplatform/authorization",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "prebuild": "npm run generateTypes",
    "build": "rimraf dist && tsc",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "build:docker": "docker build -t ghcr.io/conduitplatform/authorization:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/authorization:latest",
    "generateTypes": "sh build.sh"
  },
  "license": "ISC",
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.2",
    "@conduitplatform/grpc-sdk": "*",
    "@conduitplatform/module-tools": "*",
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.67.1",
    "convict": "^6.2.4",
    "escape-string-regexp": "^5.0.0",
    "jsonwebtoken": "^9.0.3",
    "lodash-es": "^4.17.23",
    "moment": "^2.30.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/convict": "^6.1.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "24.9.1",
    "@types/uuid": "^11.0.0",
    "copyfiles": "^2.4.1",
    "rimraf": "^6.1.2",
    "ts-proto": "^2.11.1",
    "typescript": "~5.9.3"
  }
}
