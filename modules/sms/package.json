{
  "name": "@conduit/sms",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "build:docker": "docker build -t ghcr.io/conduitplatform/sms:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/sms:latest"
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "license": "ISC",
  "dependencies": {
    "@conduitplatform/grpc-sdk": "^1.0.1",
    "convict": "^6.0.0",
    "@grpc/grpc-js": "^1.5.2",
    "lodash": "^4.17.15",
    "@grpc/proto-loader": "^0.5.4",
    "twilio": "3.54.2"
  },
  "devDependencies": {
    "@types/convict": "^4.2.1",
    "@types/lodash": "^4.14.149",
    "copyfiles": "^2.2.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.2.0"
  }
}
