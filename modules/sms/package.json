{
  "name": "@conduitplatform/sms",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "start": "node dist/index.js",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "prebuild": "npm run generateTypes",
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "generateTypes": "sh build.sh",
    "build:docker": "docker build -t ghcr.io/conduitplatform/sms:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/sms:latest"
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-sns": "^3.627.1",
    "@conduitplatform/grpc-sdk": "*",
    "@conduitplatform/module-tools": "*",
    "@grpc/grpc-js": "^1.10.9",
    "@grpc/proto-loader": "^0.7.6",
    "bluebird": "^3.7.2",
    "convict": "^6.2.4",
    "lodash-es": "^4.17.21",
    "messagebird": "^4.0.1",
    "otp-generator": "^4.0.1",
    "twilio": "5.4.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.42",
    "@types/convict": "^6.1.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "22.10.2",
    "@types/otp-generator": "^4.0.2",
    "copyfiles": "^2.4.1",
    "rimraf": "^6.0.1",
    "ts-proto": "^2.6.1",
    "typescript": "~5.7.2"
  }
}
