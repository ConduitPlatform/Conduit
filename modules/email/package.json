{
  "name": "@conduitplatform/email",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "prebuild": "npm run generateTypes",
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "build:docker": "docker build -t ghcr.io/conduitplatform/email:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/email:latest",
    "generateTypes": "sh build.sh"
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "license": "ISC",
  "dependencies": {
    "@conduitplatform/grpc-sdk": "*",
    "@conduitplatform/module-tools": "*",
    "@grpc/grpc-js": "^1.8.13",
    "@grpc/proto-loader": "^0.7.6",
    "@sendgrid/client": "^7.7.0",
    "await-to-js": "^3.0.0",
    "convict": "^6.2.4",
    "escape-string-regexp": "^4.0.0",
    "handlebars": "^4.7.8",
    "lodash": "^4.17.21",
    "mailgun-js": "^0.22.0",
    "mandrill-api": "^1.0.45",
    "nodemailer": "^6.9.1",
    "nodemailer-mailgun-transport": "^2.1.5",
    "nodemailer-mandrill-transport": "^1.2.0",
    "nodemailer-sendgrid": "^1.0.3"
  },
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/lodash": "^4.14.192",
    "@types/mailgun-js": "^0.22.13",
    "@types/mandrill-api": "^1.0.30",
    "@types/node": "18.15.11",
    "@types/nodemailer": "^6.4.7",
    "@types/nodemailer-mailgun-transport": "^1.4.3",
    "@types/smtp-server": "^3.5.7",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.0",
    "smtp-server": "^3.11.0",
    "ts-proto": "^1.160.0",
    "typescript": "~5.0.4"
  }
}
