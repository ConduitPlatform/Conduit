{
  "name": "@conduitplatform/email",
  "version": "0.16.0-rc.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "prebuild": "npm run generateTypes",
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "build:docker": "docker build -t ghcr.io/conduitplatform/email:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/email:latest",
    "generateTypes": "sh build.sh"
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "license": "ISC",
  "dependencies": {
    "@conduitplatform/grpc-sdk": "^1.0.1",
    "@grpc/grpc-js": "^1.6.7",
    "@grpc/proto-loader": "^0.6.13",
    "@sendgrid/client": "^7.7.0",
    "await-to-js": "^3.0.0",
    "convict": "^6.2.3",
    "escape-string-regexp": "^4.0.0",
    "handlebars": "^4.7.7",
    "lodash": "^4.17.21",
    "mailgun-js": "^0.22.0",
    "mandrill-api": "^1.0.45",
    "nodemailer": "^6.7.7",
    "nodemailer-mailgun-transport": "^2.1.4",
    "nodemailer-mandrill-transport": "^1.2.0",
    "nodemailer-sendgrid": "^1.0.3"
  },
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/lodash": "^4.14.182",
    "@types/mailgun-js": "^0.22.12",
    "@types/mandrill-api": "^1.0.30",
    "@types/node": "14.14.31",
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-mailgun-transport": "^1.4.3",
    "@types/smtp-server": "^3.5.7",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "rimraf": "^3.0.2",
    "smtp-server": "^3.11.0",
    "ts-proto": "^1.117.0",
    "typescript": "~4.7.4"
  },
  "conduit": {
    "dependencies": {
      "core": {
        "version": "^0.16"
      },
      "database": {
        "version": "^0.16"
      }
    }
  }
}
