{
  "name": "@conduit/email",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "build:docker": "docker build -t quintessential.azurecr.io/conduit-email:latest -f ./Dockerfile ../../ && docker push quintessential.azurecr.io/conduit-email:latest"
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.3.4",
    "@grpc/proto-loader": "^0.5.4",
    "@quintessential-sft/conduit-grpc-sdk": "^1.0.1",
    "@quintessential-sft/email-provider": "^1.0.0",
    "await-to-js": "^3.0.0",
    "convict": "^6.0.0",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@types/convict": "^4.2.1",
    "@types/lodash": "^4.14.149",
    "@types/nodemailer": "^6.4.0",
    "@types/smtp-server": "^3.5.4",
    "copyfiles": "^2.2.0",
    "rimraf": "^3.0.2",
    "smtp-server": "^3.6.0",
    "typescript": "^3.8.3"
  }
}
