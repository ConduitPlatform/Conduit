{
  "name": "@conduitplatform/router",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "prebuild": "npm run generateTypes",
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "generateTypes": "sh build.sh",
    "build:docker": "docker build -t ghcr.io/conduitplatform/router:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/router:latest"
  },
  "license": "ISC",
  "dependencies": {
    "@conduitplatform/grpc-sdk": "*",
    "@conduitplatform/hermes": "^1.0.1",
    "@conduitplatform/module-tools": "*",
    "@grpc/grpc-js": "^1.13.3",
    "@grpc/proto-loader": "^0.8.0",
    "axios": "^1.12.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "deep-object-diff": "^1.1.9",
    "deepdash-es": "^5.3.9",
    "graphql-parse-resolve-info": "^4.13.0",
    "graphql-type-json": "^0.3.2",
    "hcaptcha": "^0.2.0",
    "helmet": "8.1.0",
    "ioredis": "^5.3.2",
    "lodash-es": "^4.17.21",
    "moment": "^2.30.1",
    "swagger-ui-express": "5.0.1"
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "~5.0.3",
    "@types/graphql-type-json": "^0.3.5",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "24.9.1",
    "express": "~5.1.0",
    "rimraf": "^6.0.1",
    "ts-proto": "^2.8.0",
    "typescript": "~5.9.3"
  }
}
