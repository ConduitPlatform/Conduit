{
  "name": "@conduitplatform/router",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "prebuild": "npm run generateTypes",
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "generateTypes": "sh build.sh",
    "build:docker": "docker build -t ghcr.io/conduitplatform/router:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/router:latest"
  },
  "license": "ISC",
  "dependencies": {
    "@conduitplatform/grpc-sdk": "^1.0.1",
    "@conduitplatform/hermes": "^1.0.1",
    "@grpc/grpc-js": "^1.5.2",
    "@grpc/proto-loader": "^0.5.4",
    "apollo-server-express": "^2.11.0",
    "bcrypt": "^5.0.1",
    "deep-object-diff": "^1.1.7",
    "deepdash": "^5.0.1",
    "graphql": "^15.0.0",
    "graphql-parse-resolve-info": "^4.5.0",
    "graphql-tools": "^4.0.7",
    "graphql-type-json": "^0.3.1",
    "helmet": "^4.3.1",
    "lodash": "^4.17.21",
    "moment": "^2.24.0",
    "rate-limiter-flexible": "^2.2.1",
    "redis": "^3.0.2",
    "swagger-ui-express": "4.1.5"
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "~4.17.13",
    "@types/graphql-type-json": "^0.3.2",
    "@types/lodash": "^4.14.149",
    "@types/node": "14.14.31",
    "@types/redis": "^2.8.28",
    "copyfiles": "^2.2.0",
    "express": "~4.18.1",
    "rimraf": "^3.0.2",
    "ts-proto": "^1.112.1",
    "typescript": "~4.2.0"
  }
}
