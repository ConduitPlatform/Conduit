{
  "name": "@conduitplatform/forms",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "type": "module",

  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "build": "rimraf dist && tsc",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "build:docker": "docker build -t ghcr.io/conduitplatform/forms:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/forms:latest"
  },
  "license": "ISC",
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@conduitplatform/grpc-sdk": "*",
    "@conduitplatform/module-tools": "*",
    "@grpc/grpc-js": "^1.10.9",
    "@grpc/proto-loader": "^0.7.6",
    "axios": "^1.7.8",
    "convict": "^6.2.4",
    "escape-string-regexp": "^4.0.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "20.11.24",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5",
    "typescript": "~5.6.2"
  }
}
