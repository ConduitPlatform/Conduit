{
  "name": "@conduitplatform/storage",
  "version": "1.0.1",
  "description": "This will provide a consistent storage mechanism",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "prepublish": "npm run build",
    "prebuild": "npm run generateTypes",
    "build": "rimraf dist && tsc",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "prepare": "npm run build",
    "build:docker": "docker build -t ghcr.io/conduitplatform/storage:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/storage:latest",
    "generateTypes": "sh build.sh"
  },
  "keywords": [],
  "author": "",
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-iam": "^3.975.0",
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/client-sts": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@azure/storage-blob": "^12.30.0",
    "@bufbuild/protobuf": "^2.10.2",
    "@conduitplatform/grpc-sdk": "*",
    "@conduitplatform/module-tools": "*",
    "@google-cloud/storage": "^7.18.0",
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "ali-oss": "^6.21.0",
    "convict": "^6.2.4",
    "lodash-es": "^4.17.23",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/ali-oss": "^6.23.1",
    "@types/convict": "^6.1.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "24.9.1",
    "@types/uuid": "^11.0.0",
    "copyfiles": "^2.4.1",
    "rimraf": "^6.1.2",
    "ts-proto": "^2.11.1",
    "typescript": "~5.9.3"
  }
}
