  },
  "license": "ISC",
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@quintessential-sft/conduit-grpc-sdk": "^1.0.1",
    "axios": "0.20.0",
    "bcrypt": "^3.0.7",
    "convict": "^6.0.0",
    "google-auth-library": "^5.10.1",
    "@grpc/grpc-js": "^1.3.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/convict": "^4.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/lodash": "^4.14.149",
    "@types/uuid": "^7.0.2",
    "copyfiles": "^2.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  }
}
