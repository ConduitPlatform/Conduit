{
  "name": "@conduitplatform/authentication",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "prebuild": "npm run generateTypes",
    "build": "rimraf dist && tsc",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "build:docker": "docker build -t ghcr.io/conduitplatform/authentication:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/authentication:latest",
    "generateTypes": "sh build.sh"
  },
  "license": "ISC",
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@conduitplatform/grpc-sdk": "*",
    "@conduitplatform/module-tools": "*",
    "@conduitplatform/node-2fa": "^1.0.0",
    "@grpc/grpc-js": "^1.8.13",
    "@grpc/proto-loader": "^0.7.6",
    "axios": "^1.3.5",
    "bcrypt": "^5.1.0",
    "convict": "^6.2.4",
    "crypto": "^1.0.1",
    "escape-string-regexp": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "querystring": "^0.2.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/convict": "^6.1.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.192",
    "@types/node": "18.15.11",
    "@types/uuid": "^9.0.1",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.0",
    "ts-proto": "^1.160.0",
    "typescript": "~5.0.4"
  }
}
