{
  "name": "@conduitplatform/authentication",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "prebuild": "npm run generateTypes",
    "build": "rimraf dist && tsc",
    "postbuild": "copyfiles -u 1 src/**/*.proto src/*.proto src/**/*.json ./dist/",
    "build:docker": "docker build -t ghcr.io/conduitplatform/authentication:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/authentication:latest",
    "generateTypes": "sh build.sh"
  },
  "license": "ISC",
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@conduitplatform/grpc-sdk": "^1.0.1",
    "@grpc/grpc-js": "^1.5.2",
    "@grpc/proto-loader": "^0.5.4",
    "axios": "0.21.4",
    "bcrypt": "^5.0.1",
    "convict": "^6.2.1",
    "escape-string-regexp": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/convict": "^4.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/lodash": "^4.14.149",
    "@types/node": "14.14.31",
    "@types/uuid": "^7.0.2",
    "copyfiles": "^2.2.0",
    "rimraf": "^3.0.2",
    "ts-proto": "^1.115.5",
    "typescript": "~4.2.0"
  }
}
