{
  "name": "@conduitplatform/database",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "prepublish": "npm run build",
    "prebuild": "npm run generateTypes",
    "build": "rimraf dist && tsc",
    "postbuild": "copyfiles -u 1 src/*.proto ./dist/",
    "build:docker": "docker build -t ghcr.io/conduitplatform/database:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/database:latest",
    "generateTypes": "sh build.sh"
  },
  "license": "ISC",
  "dependencies": {
    "@conduitplatform/grpc-sdk": "^1.0.1",
    "@grpc/grpc-js": "^1.8.13",
    "@grpc/proto-loader": "^0.7.6",
    "bson": "^5.2.0",
    "deepdash": "^5.3.9",
    "deepdash-es": "^5.3.9",
    "escape-string-regexp": "^5.0.0",
    "lodash": "^4.17.21",
    "mariadb": "^3.1.1",
    "mongodb-extended-json": "^1.11.0",
    "mongodb-schema": "^10.0.1",
    "mongoose": "7.0.3",
    "mongoose-deep-populate": "^3.2.0",
    "mysql2": "^3.2.0",
    "object-hash": "^3.0.0",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.0",
    "sequelize-auto": "^0.8.8",
    "sqlite3": "^5.1.6"
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.192",
    "@types/node": "18.15.11",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.0",
    "ts-proto": "^1.146.0",
    "typescript": "~5.0.4"
  }
}
