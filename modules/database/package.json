{
  "name": "@conduitplatform/database",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "prepublish": "npm run build",
    "prebuild": "npm run generateTypes",
    "build": "rimraf dist && tsc",
    "postbuild": "copyfiles -u 1 src/*.proto ./dist/",
    "build:docker": "docker build -t ghcr.io/conduitplatform/database:latest -f ./Dockerfile ../../ && docker push ghcr.io/conduitplatform/database:latest",
    "generateTypes": "sh build.sh"
  },
  "license": "ISC",
  "dependencies": {
    "@conduitplatform/grpc-sdk": "^1.0.1",
    "@grpc/grpc-js": "^1.5.2",
    "@grpc/proto-loader": "^0.5.4",
    "bson": "^4.2.2",
    "deepdash": "^5.0.3",
    "deepdash-es": "^5.0.3",
    "escape-string-regexp": "^4.0.0",
    "lodash": "^4.17.15",
    "mariadb": "^2.5.4",
    "mongodb-extended-json": "^1.11.0",
    "mongodb-schema": "^9.0.0",
    "mongoose": "5.13.13",
    "mongoose-deep-populate": "^3.2.0",
    "mysql2": "^2.3.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.2",
    "sequelize-auto": "^0.8.8",
    "sqlite3": "^5.0.2",
    "tedious": "^14.3.0"
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/node": "14.14.31",
    "copyfiles": "^2.2.0",
    "rimraf": "^3.0.2",
    "ts-proto": "^1.112.1",
    "typescript": "~4.2.0"
  }
}
