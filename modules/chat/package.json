    "@grpc/proto-loader": "^0.6.13",
    "convict": "^6.2.3",
    "escape-string-regexp": "^4.0.0",
    "lodash": "^4.17.21",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/node": "14.14.31",
    "@types/uuid": "^8.3.4",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-proto": "^1.117.0",
    "typescript": "~4.7.4"
